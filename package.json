{
  "name": "@hyperse/eslint-config-hyperse",
  "version": "1.1.1",
  "description": "ğŸ›  These are settings for TypeScript / ESLint / Prettier in a project",
  "keywords": [
    "hyperse",
    "esm",
    "javascript",
    "ecmascript",
    "typescript",
    "eslint",
    "config",
    "prettier"
  ],
  "homepage": "git@github.com:hyperse-io/eslint-config-hyperse.git",
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/eslint-config-hyperse.git"
  },
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/main/base.js",
      "types": "./dist/main/base.d.ts"
    },
    "./reactjs": {
      "import": "./dist/main/reactjs.js",
      "types": "./dist/main/reactjs.d.ts"
    },
    "./nextjs": {
      "import": "./dist/main/nextjs.js",
      "types": "./dist/main/nextjs.d.ts"
    },
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/",
    "./index.js",
    "./tsconfig.base.json"
  ],
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "clean": "rimraf --no-glob ./dist ./coverage ./.eslintcache ./tsconfig.tsbuildinfo",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint-staged-files": "lint-staged --allow-empty",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn run build && changeset publish",
    "cz": "cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.8.0",
    "@next/eslint-plugin-next": "rc",
    "app-root-path": "^3.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "beta",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^1.0.4",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-vitest-2": "^0.6.1",
    "get-tsconfig": "^4.7.6",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.9",
    "typescript-eslint": "^8.0.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@swc/core": "^1.7.6",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "22.1.0",
    "@types/react": "^18.3.3",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.8.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "rimraf": "6.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  },
  "peerDependencies": {
    "eslint": ">=9.3.0",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "yarn@4.4.0"
}
