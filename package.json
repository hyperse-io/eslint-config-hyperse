{
  "name": "@hyperse/eslint-config-hyperse",
  "version": "1.4.0",
  "description": "ðŸ›  These are settings for TypeScript / ESLint / Prettier in a project",
  "keywords": [
    "hyperse",
    "esm",
    "javascript",
    "ecmascript",
    "typescript",
    "eslint",
    "config",
    "prettier"
  ],
  "homepage": "git@github.com:hyperse-io/eslint-config-hyperse.git",
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/eslint-config-hyperse.git"
  },
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/main/base.js",
      "types": "./dist/main/base.d.ts"
    },
    "./sonarjs": {
      "import": "./dist/main/sonarjs.js",
      "types": "./dist/main/sonarjs.d.ts"
    },
    "./reactjs": {
      "import": "./dist/main/reactjs.js",
      "types": "./dist/main/reactjs.d.ts"
    },
    "./nextjs": {
      "import": "./dist/main/nextjs.js",
      "types": "./dist/main/nextjs.d.ts"
    },
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./package.json": "./package.json"
  },
  "workspaces": [
    "examples/*",
    "./"
  ],
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/",
    "./index.js",
    "./tsconfig.base.json"
  ],
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "changeset": "changeset",
    "clean": "rimraf --no-glob ./dist ./coverage ./.eslintcache ./tsconfig.tsbuildinfo",
    "cz": "cz",
    "lint": "TIMING=1 eslint .",
    "lint-staged-files": "lint-staged --allow-empty",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "release": "yarn run build && changeset publish",
    "test": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "version": "changeset version"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.24.0",
    "@next/eslint-plugin-next": "^15.3.0",
    "@typescript-eslint/utils": "^8.30.1",
    "@vitest/eslint-plugin": "^1.1.42",
    "app-root-path": "^3.1.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-mdx": "^3.4.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "get-tsconfig": "^4.10.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "typescript-eslint": "^8.30.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.2",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@swc/core": "^1.11.21",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "22.14.1",
    "@types/react": "^19.1.2",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.24.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "rimraf": "6.0.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  },
  "peerDependencies": {
    "eslint": ">=9.3.0",
    "typescript": "^5.4.3"
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
